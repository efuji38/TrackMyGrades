<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/greetingTeacherTextView"
        android:layout_width="390dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textSize="25sp"
        android:text="Hello Teacher!"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="126dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/createAssignmentQuizButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/greetingTeacherTextView"
        android:layout_marginTop="30dp"
        android:text="Create Task/Quiz"
        android:gravity="center"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="222dp" />

    <Button
        android:id="@+id/viewAssessmentButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/createAssignmentQuizButton"
        android:layout_marginTop="10dp"
        android:text="View Task/Quiz"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="222dp" />

    <Button
        android:id="@+id/assignGradesButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewAssessmentButton"
        android:layout_marginTop="10dp"
        android:text="Assign Grades"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="222dp" />



</androidx.constraintlayout.widget.ConstraintLayout>