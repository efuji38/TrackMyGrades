<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/greetingStudentTextView"
        android:layout_width="390dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textSize="25sp"
        android:text="Hello Student!"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="126dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/viewGradeButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/greetingStudentTextView"
        android:layout_marginTop="30dp"
        android:text="View Grades"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="222dp" />

    <Button
        android:id="@+id/trackAssignmentButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewGradeButton"
        android:layout_marginTop="10dp"
        android:text="Track Assignemnt"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="222dp" />

    <Button
        android:id="@+id/studentLogoutButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trackAssignmentButton"
        android:layout_marginTop="10dp"
        android:text="Logout"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="222dp" />

